{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SWFOC Workshop Top Mods",
  "type": "object",
  "required": [
    "schemaVersion",
    "generatedAtUtc",
    "retrievalTimestampUtc",
    "rankingBasis",
    "sources",
    "appId",
    "topMods"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "enum": ["1.0"]
    },
    "generatedAtUtc": {
      "type": "string",
      "format": "date-time"
    },
    "retrievalTimestampUtc": {
      "type": "string",
      "format": "date-time"
    },
    "rankingBasis": {
      "type": "string",
      "minLength": 1
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "uri"],
        "properties": {
          "type": { "type": "string", "minLength": 1 },
          "uri": { "type": "string", "minLength": 1 },
          "note": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "appId": {
      "oneOf": [
        { "type": "integer", "minimum": 1 },
        { "type": "string", "pattern": "^[0-9]+$" }
      ]
    },
    "topMods": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "workshopId",
          "title",
          "url",
          "subscriptions",
          "lifetimeSubscriptions",
          "timeUpdated",
          "parentDependencies",
          "launchHints",
          "candidateBaseProfile",
          "confidence",
          "riskLevel",
          "normalizedTags"
        ],
        "properties": {
          "workshopId": { "type": "string", "pattern": "^[0-9]+$" },
          "title": { "type": "string", "minLength": 1 },
          "url": { "type": "string", "format": "uri", "minLength": 1 },
          "subscriptions": { "type": "integer", "minimum": 0 },
          "lifetimeSubscriptions": { "type": "integer", "minimum": 0 },
          "timeUpdated": { "type": "string", "format": "date-time" },
          "parentDependencies": {
            "type": "array",
            "items": { "type": "string", "pattern": "^[0-9]+$" }
          },
          "launchHints": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "candidateBaseProfile": { "type": "string", "minLength": 1 },
          "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
          "riskLevel": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "normalizedTags": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-z0-9][a-z0-9_-]*$"
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
