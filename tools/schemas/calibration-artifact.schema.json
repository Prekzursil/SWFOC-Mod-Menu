{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swfoc-mod-menu.local/schemas/calibration-artifact.schema.json",
  "title": "SWFOC Calibration Artifact",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "generatedAtUtc",
    "profileId",
    "moduleFingerprint",
    "candidates"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "1.0"
    },
    "generatedAtUtc": {
      "type": "string",
      "format": "date-time"
    },
    "profileId": {
      "type": "string",
      "minLength": 1
    },
    "moduleFingerprint": {
      "type": "string",
      "minLength": 1
    },
    "operatorNotes": {
      "type": ["string", "null"]
    },
    "process": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "pid",
            "name",
            "path",
            "commandLineAvailable",
            "launchKind",
            "launchReasonCode"
          ],
          "properties": {
            "pid": {
              "type": "integer",
              "minimum": 0
            },
            "name": {
              "type": "string",
              "minLength": 1
            },
            "path": {
              "type": "string",
              "minLength": 1
            },
            "commandLineAvailable": {
              "type": "boolean"
            },
            "launchKind": {
              "type": "string",
              "minLength": 1
            },
            "launchReasonCode": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      ]
    },
    "candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "symbol",
          "source",
          "healthStatus",
          "confidence"
        ],
        "properties": {
          "symbol": {
            "type": "string",
            "minLength": 1
          },
          "source": {
            "type": "string",
            "minLength": 1
          },
          "healthStatus": {
            "type": "string",
            "minLength": 1
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "notes": {
            "type": ["string", "null"]
          }
        }
      }
    }
  }
}
