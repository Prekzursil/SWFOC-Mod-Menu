{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SWFOC Generated Profile Seeds",
  "type": "object",
  "required": [
    "schemaVersion",
    "generatedAtUtc",
    "sourceRunId",
    "appId",
    "seeds"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "enum": ["1.0"]
    },
    "generatedAtUtc": {
      "type": "string",
      "format": "date-time"
    },
    "sourceRunId": {
      "type": "string",
      "minLength": 1
    },
    "appId": {
      "oneOf": [
        { "type": "integer", "minimum": 1 },
        { "type": "string", "pattern": "^[0-9]+$" }
      ]
    },
    "seeds": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "workshopId",
          "title",
          "parentDependencies",
          "launchHints",
          "candidateBaseProfile",
          "requiredCapabilities",
          "anchorHints",
          "riskLevel",
          "confidence",
          "sourceRunId"
        ],
        "properties": {
          "workshopId": { "type": "string", "pattern": "^[0-9]+$" },
          "title": { "type": "string", "minLength": 1 },
          "parentDependencies": {
            "type": "array",
            "items": { "type": "string", "pattern": "^[0-9]+$" }
          },
          "launchHints": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "candidateBaseProfile": { "type": "string", "minLength": 1 },
          "requiredCapabilities": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "anchorHints": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "riskLevel": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
          "sourceRunId": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
