{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swfoc-mod-menu.local/schemas/support-bundle-manifest.schema.json",
  "title": "SWFOC Support Bundle Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "generatedAtUtc",
    "includedFiles",
    "warnings"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "1.0"
    },
    "generatedAtUtc": {
      "type": "string",
      "format": "date-time"
    },
    "profileId": {
      "type": ["string", "null"]
    },
    "notes": {
      "type": ["string", "null"]
    },
    "includedFiles": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
