{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swfoc-mod-menu.local/schemas/binary-fingerprint.schema.json",
  "title": "SWFOC Binary Fingerprint",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "runId",
    "generatedAtUtc",
    "fingerprintId",
    "fileSha256",
    "moduleName",
    "timestampUtc",
    "moduleList",
    "sourcePath"
  ],
  "properties": {
    "schemaVersion": { "type": "string", "const": "1.0" },
    "runId": { "type": "string", "minLength": 1 },
    "generatedAtUtc": { "type": "string", "format": "date-time" },
    "fingerprintId": { "type": "string", "minLength": 1 },
    "fileSha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "moduleName": { "type": "string", "minLength": 1 },
    "productVersion": { "type": ["string", "null"] },
    "fileVersion": { "type": ["string", "null"] },
    "timestampUtc": { "type": "string", "format": "date-time" },
    "moduleList": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "sourcePath": { "type": "string", "minLength": 1 }
  }
}
